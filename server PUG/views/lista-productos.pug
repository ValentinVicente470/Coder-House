doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Lora:ital@1&display=swap" rel="stylesheet")
        title Lista de Productos

    body(style="background-color: rgb(60, 58, 72)")
        div(class="container mt-3")
            div(class="jumbotron")
                center
                    h1(style="color:rgb(0, 0, 0); font-family: 'Lora', serif;") Lista de Productos 
                    a(style= "font-family: 'Lora', serif; font-size: x-small;" href="http://localhost:8081/api/productos" class="btn btn-primary mt-3  mb-5") Agregar Producto

                    -if (objetos.length > 0)  
                        div(class="table-responsive")
                            table(style="height:auto ;" class="table table-dark")
                                tr
                                    th(style= "font-family: 'Lora', serif;") Nombre 
                                    th(style= "font-family: 'Lora', serif;") Precio 
                                    th(style= "font-family: 'Lora', serif;") Foto
                                    th(style= "font-family: 'Lora', serif;") Id 
                                -for (const objeto of objetos) 
                                    tr
                                        td=(objeto.name) 
                                        td=(objeto.price)
                                        td
                                            img(src=(objeto.thumbnail) width="80" height="80")
                                        td=(objeto.id)
                                
                    -else 
                        h3(class="alert alert-danger") No se encontraron productos
                     
                       
    
                

