doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Lora:ital@1&display=swap" rel="stylesheet")
        title Formulario de ingreso de productos
        
    body(style="background-color: rgb(60, 58, 72)")
        center 
            h1(style="color:rgb(0, 0, 0); font-family: 'Lora', serif; ; ") Ingrese Producto
            br
            form(action="/api/productos/post" method="POST")
                div(class="form-group")
                    label(style="color:rgb(0, 0, 0)" for="name") <b>Name:</b>
                    input(type="text" class="form-control" style="width: 250px; background-color: rgb(140, 118, 169);" name="name" id="name")
                br
                div(class="form-group")
                    label(style="color:rgb(0, 0, 0)" for="price") <b>Price:</b>
                    input(type="number" class="form-control" style="width: 250px; background-color: rgb(140, 118, 169);" name="price" id="price")     
                br
                div(class="form-group")
                    label(style="color:rgb(0, 0, 0)" for="thumbnail") <b>Thumbnail:</b>
                    input(type="text" class="form-control" style="width: 250px; background-color: rgb(140, 118, 169);"  name="thumbnail" id="thumbnail")
                br
                div
                    button(style= "font-family: 'Lora', serif; font-size: x-small; margin-right: 5px" type="submit" class="btn btn-success mt-3  mb-5") Enviar 
                    a(style= "font-family: 'Lora', serif; font-size: x-small; margin-left: 5px" href="http://localhost:8081/api/productos/lista" class="btn btn-primary mt-3 mb-5") Lista de Productos
            
        
      



